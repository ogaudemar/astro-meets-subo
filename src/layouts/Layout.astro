---

import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

import CTA from '../components/CTA.astro';

import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = "Subo is a powerful survey bot which helps you engage and understand your friends and community with polls and surveys in your Discord server", ogImage = "/images/og-image.png" } = Astro.props;
---


<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" sizes="16x16" />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta name="twitter:title" content={title} />
    <meta property="og:description" content={description} />
    <meta name="twitter:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content={ogImage} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:wght@400;700&display=swap" rel="stylesheet" />
    
    <!-- Analytics -->
    <script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=AW-11425742226"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'AW-11425742226');
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --primary: #e1287e;
    --primary-light: #f34f85;
    --primary-dark: #71143F;
    --accent: #9eff00;
    --secondary: #745399;
    --secondary-dark: #3C2B50;
    --dark: #000000;
    --light: #E8E8E8;
    --text-white: #ffffff;
    --bg-dark: #3D3D3D;
    --grey-light: #848ca4;
    --grey-dark: #242c44;
    --third: #745399
    --third-dark: #745399;
    --premium: #00f4ffff;
    --VIP: #ffff00;
    --coral: #FF7F50;
    --blurple: #5865F2;
    --navy: #081693;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: 'Source Code Pro', monospace;
    scroll-behavior: smooth;
  }

  body {
    line-height: 1.6;
    color: #333;
    background: #000;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .container--small {
    max-width: 800px;
  }

  .container--large {
    max-width: 1400px;
  }

  .text-white {
    color: var(--text-white);
  }

  .text-center {
    text-align: center;
  }

  .heading {
    font-weight: 700;
    line-height: 1.2;
  }

  .heading--accent {
    color: var(--accent);
  }

  .button {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    cursor: pointer;
  }

  .button--accent-bg {
    background: var(--accent);
    color: white;
  }

  .button--accent-bg:hover {
    background: var(--primary-dark);
  }

  .button--white-bg {
    background: white;
    color: var(--dark);
  }

  .button--white-bg:hover {
    background: var(--light);
  }

  .button--white-outline {
    background: transparent;
    color: white;
    border-color: white;
  }

  .button--white-outline:hover {
    background: white;
    color: var(--dark);
  }

  .bg-dark {
    background: var(--bg-dark);
  }

  .bg-black {
    background: #000;
  }

  .bg-accent {
    background: var(--accent);
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .container {
      padding: 0 15px;
    }
    
    .heading {
      font-size: 1.8rem;
    }
  }
</style>