---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import translations from '../content/translations/en.json';
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
        <Header translations={translations.header} />
        <main class="legal-main">
        <slot />
        </main>
        <Footer translations={translations.footer}/>
    </body>
</html>    


<style>
.legal-main {
  background: #fff;
  color: #222;
  font-family: 'Figtree', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  padding: 8rem 0;
  min-height: 60vh;
}

/* Override global monospace heading font and oversized sizes for legal text */
.legal-main :global(h1),
.legal-main :global(h2),
.legal-main :global(h3),
.legal-main :global(h4),
.legal-main :global(h5),
.legal-main :global(h6) {
  font-family: 'Figtree', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  color: #111;
}

.legal-main :global(h1) {
  font-size: 2rem;
}

.legal-main :global(h3),
.legal-main :global(.def-18_72) {
  font-size: 1.05rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.03em;
  margin-bottom: 0.5rem;
}

/* Override white link color (invisible on white bg) and lime hover */
.legal-main :global(a) {
  color: #e1287e;
}

.legal-main :global(a:hover) {
  color: #71143f;
}
</style>
