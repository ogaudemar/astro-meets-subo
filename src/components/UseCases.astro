// Shuffle and select 4 random use cases
function getRandomUseCases(arr, n) {
  return arr
    .map(value => ({ value, sort: Math.random() }))
    .sort((a, b) => a.sort - b.sort)
    .slice(0, n)
    .map(({ value }) => value);
}

