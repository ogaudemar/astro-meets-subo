  transform: translateY(-4px) scale(1.03);
  box-shadow: 0 6px 16px var(--accent);
  background: rgba(255,255,255,0.2);

        
}

.usecase-card span {
  font-size: 1rem;
  line-height: 1.4;
}

.usecase-card:first-child {
