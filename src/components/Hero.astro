<style>
  .hero {

    background: linear-gradient(black, var(--secondary-dark));
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 100px;

  }

  .Logo__banner {
    background: var(--secondary-dark);
  }

  .hero__container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /* border-bottom: 1px solid var(--primary-dark); */
    margin: 20px auto 10px auto;
    width: 100%;
    height: auto;
    border-radius: 12px;
    gap: 15px;
  

    /*display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;*/
  }

  .hero__content {
    margin-top: 20px;
    max-width: 1200px;
    text-align: center;
  }

  .hero__title {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    color: white;
  }

/*attempt to bring back text animation */
.text-typing {
            margin: 0px;
            white-space: nowrap;
            /* Removed clip-path to prevent text clipping */
            animation: 
typing 4s steps(22, end) forwards, blink 1s infinite;
        }

        @keyframes typing {
            0% {
                width: 0%
            }

            100% {
                width: 100%
            }
        }

        @keyframes blink {

            0%,
            100% {
                border-right: 2px solid transparent;
            }

            50% {
                border-right: 2px solid #222;
            }
        }

/*end of animation*/

  .hero__rotating-text {
    color: var(--accent);
    position: relative;
  }


  .hero__cta {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    padding: 10px 0;
    margin: 10px 0;
  }

  .hero__cta-note {
    font-size: 0.9rem;
    opacity: 0.8;
    padding: 10px 0;
    margin: 10px 0;
  }

  .hero__image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero__img {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .hero {
      padding: 100px 0 50px;
      min-height: auto;
    }

    .hero__container {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .hero__title {
      font-size: 2rem;
    }

 
    .hero__cta {
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .hero__title {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  // Text rotation effect
  const rotatingText = document.querySelector('.hero__rotating-text');
  if (rotatingText) {
    const words = JSON.parse(rotatingText.dataset.words || '["COMMUNITY"]');
    let currentIndex = 0;
    
    setInterval(() => {
      currentIndex = (currentIndex + 1) % words.length;
      rotatingText.textContent = words[currentIndex];
    }, 2000);
  }
</script>