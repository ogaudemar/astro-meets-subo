<script>
(function() {
  var preferredLang = localStorage.getItem('preferredLang');
  var path = window.location.pathname;
  var parts = path.replace(/^\/+/, '').split('/');

  // Only run redirect on homepage/root
  if (path === '/' || path === '') {
    // If preferredLang is set and not already on the correct language path
    if (preferredLang && ['fr','es','de','pt-br'].includes(preferredLang)) {
      window.location.pathname = '/' + preferredLang;
      return;
    }

    // If no preferredLang, use browser language
    if (!preferredLang) {
      var userLang = (navigator.language || navigator.userLanguage || 'en').slice(0,2);
      if (!['en','fr','es','de','pt'].includes(userLang)) userLang = 'en';
      if (['fr','es','de'].includes(userLang)) {
        window.location.pathname = '/' + userLang;
      } else if (userLang === 'pt') {
        window.location.pathname = '/pt-br';
      }
    }
  }

  if (['/', '/pricing'].includes(path)) {
    var suffix = path === '/pricing' ? '/pricing' : '';
    // If preferredLang is set and not already on the correct language path
    if (preferredLang && ['fr','es','de','pt-br'].includes(preferredLang)) {
      window.location.pathname = '/' + preferredLang + suffix;
      return;
    }

    // If no preferredLang, use browser language
    if (!preferredLang) {
      var userLang = (navigator.language || navigator.userLanguage || 'en').slice(0,2);
      if (!['en','fr','es','de','pt'].includes(userLang)) userLang = 'en';
      if (['fr','es','de'].includes(userLang)) {
        window.location.pathname = '/' + userLang + suffix;
      } else if (userLang === 'pt') {
        window.location.pathname = '/pt-br' + suffix;
      }
    }
  }
})();
</script>



