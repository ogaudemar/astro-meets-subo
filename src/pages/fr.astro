    font-weight: 700;
    color: white;
    margin-bottom: 1.5rem;
    line-height: 1.3;
  }

  .hero__subtitle {
    font-size: 1.6rem;
    font-weight: 600;
    color: var(--light);
    margin-bottom: 1.5rem;
  }

  .hero__description {
    font-size: 1.25rem;
    color: #ccc;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .hero__buttons {
    display: flex;
    gap: 1rem;
  }

  .hero__image {
    text-align: center;
  }

  .hero__screenshot {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .button {
    display: inline-block;
    padding: 15px 30px;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    text-align: center;
    transition: all 0.3s ease;
  }

  .button--accent {
    background: var(--accent);
    color: white;
  }

  .button--accent:hover {
    background: var(--accent-hover);
    transform: translateY(-2px);
  }

  .button--white-outline {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .button--white-outline:hover {
    background: white;
    color: black;
  }

  .features {
    padding: 80px 0;
    background: linear-gradient(var(--primary-dark), var(--dark));
  }

  .features__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 3rem;
  }

  .feature-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 3rem;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
  }

  .feature-card__icon {
    font-size: 3rem;
    margin-bottom: 1.5rem;
  }

  .feature-card__title {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1.5rem;
  }

  .feature-card__list {
    text-align: left;
    color: #ccc;
    line-height: 1.8;
  }

  .feature-card__list li {
    margin-bottom: 1rem;
  }

  .stats {
    padding: 60px 0;
    background: linear-gradient(var(--dark),var(--secondary-dark));
    text-align: center;
  }

  .stats__title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
  }

  .stats__subtitle {
    font-size: 1.25rem;
    color: #ccc;
  }

  .reasons {
    padding: 80px 0;
    background: linear-gradient(var(--secondary-dark),var(--dark));
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    text-align: center;
    margin-bottom: 4rem;
  }

  .reasons__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .reason-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .reason-card__icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .reason-card__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    margin-bottom: 1rem;
  }

  .reason-card__description {
    color: #ccc;
    line-height: 1.6;
  }

  .cta {
    padding: 80px 0;
    background: linear-gradient(135deg, #1a1a1a 0%, #000 100%);
    text-align: center;
  }

  .cta__content {
    max-width: 800px;
    margin: 0 auto;
  }

  .cta__title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1.5rem;
  }

  .cta__description {
    font-size: 1.25rem;
    color: #ccc;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .cta__buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .hero__content {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .hero__title {
