    }

    .hero__subtitle {
      font-size: 1.5rem;
    }

    .hero__buttons,
    .cta__buttons {
      flex-direction: column;
      align-items: center;
    }

    .features__grid {
      grid-template-columns: 1fr;
    }

    .reasons__grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }
  }
</style>