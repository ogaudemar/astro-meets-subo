<style>
  /* Reuse the same styles from the English version */

  .accent {
    color: var(--accent);
  }

  .hero {
    background: linear-gradient(var(--dark), var(--primary-dark));
    padding: 100px 0;
    overflow: hidden;
  }

  .hero__content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero__title {
