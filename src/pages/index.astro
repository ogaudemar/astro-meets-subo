---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

import Hero from '../components/Hero.astro';
import UseCases from '../components/UseCases.astro';
import Features from '../components/Features.astro';
import Testimonials from '../components/Testimonials.astro';
import CTA from '../components/CTA.astro';

import Footer from '../components/Footer.astro';
import translations from '../content/translations/en.json';


---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header translations={translations} />
		<main>
    		<Hero translations={translations.hero} />
			<Features translations={translations.features} />
			<UseCases translations={translations} />
			<Testimonials translations={translations} />
			<CTA translations={translations} />    
		</main>
		<Footer translations={translations.footer}/>
	</body>
</html>
