---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SITE_DESCRIPTION, DISCORD_STORE_URL } from '../consts';


import PriceTable from '../components/PriceTable.astro';

import Footer from '../components/Footer.astro';


---

<!doctype html>
<html lang="en" title="Pricing - Subo the Survey Bot: Plans for Every Server">
	<head>
		<BaseHead title="Pricing - Subo the Survey Bot: Plans for Every Server" description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
            <main>
                <section class="pricing-hero">
                <div class="container">
                    <div class="pricing-hero__content">
                    <h2 class="pricing-hero__title"><span class="accent">LEVEL UP</span> WITH PAID PLANS</h2>
                    <p class="subtitle">
                        Whether you're running a small group or a large, active community, Subo has a plan that fits.<br>
                        Start free. Upgrade to unlock more features and support future development.
                    </p>
                    </div>
                </div>
                </section>

                <section class="pricing-section">
                    <div class="container">
                        <PriceTable />
                    </div>
                </section>

                <section class="pricing-section">
                    
                    <div class="pricing-hero__content">
                        <h2 class="pricing-hero__title">DISCORD OR STRIPE: <span class="accent">YOU DECIDE</span></h2>
                        <p class="subtitle">Two ways to upgrade: via Discord, or directly on this website with Stripe.</p>
                    </div>
                    
                    <div class="upgrade-options">

                        <div class="discount-card">
                            <h3 class="discount-title"><span style="align-items: start;"><svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
            </svg>
          </span>DISCORD</h3>
                            <li class="discount-desc">Upgrade effective immediately</li>
                            <li class="discount-desc">Limited to monthly subscriptions</li>
                            <li class="discount-desc">Upgrade, cancel or manage subscriptions via Discord</li>
                            <form action={DISCORD_STORE_URL} method="get" style="margin:0;">
                                <button type="submit" class="button button--white-bg mono">Upgrade with Discord</button>
                            </form>
                        </div>

                         <div class="discount-card">
                            <h3 class="discount-title">STRIPE</h3>
                            <li class="discount-desc">All tiers (including custom bots), monthly or yearly, 1 server or more</li>
                            <li class="discount-desc">Yearly Discount: Get Subo for 1 year and get <strong>2 months free</strong></li>
                            <li class="discount-desc">Multi-Server Discount: More discounts for additional servers</li>
                            <li class="discount-desc">Upgrade, cancel or manage subscriptions via Stripe Billing Portal</li>
                            <form action="/subscriptions" method="get" style="margin:0;">
                                <button type="submit" class="button button--white-bg mono">Upgrade with Stripe</button>
                            </form>
                        </div>

                    </div>
                </section>
            </main>
		<Footer />
	</body>
</html>

<style>

body {
    background: linear-gradient(var(--dark), var(--secondary-dark), var(--secondary), var(--primary), var(--accent));
}

  .pricing-hero {
    
    padding: 100px 0 60px;
    text-align: center;
  }

  .pricing-hero__content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .pricing-hero__title {
    font-size: 3rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }
.accent {
    color: var(--accent);
}

  .pricing-hero__subtitle {
    font-size: 1.25rem;
    color: #ccc;
    line-height: 1.6;
    margin-bottom: 0;
  }

  .pricing-section {
    padding: 60px 0;
    margin-bottom: 3rem;
    
  }

  .upgrade-options {
  display: flex;
  gap: 5rem;
  margin-top: 2.5rem;
  justify-content: center;
  flex-wrap: wrap;
  
}

.discount-card {
  background: rgba(255,255,255,0.08);
  border-radius: 1rem;
  padding: 1.5rem 2rem;
  color: #fff;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
  min-width: 260px;
  max-width: 400px;
  text-align: center;

}

.discount-title {
  font-size: 1.25rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  letter-spacing: 1px;
  color: var(--blurple-dark);

}

.discount-desc {
  font-size: 1rem;
    color: white;
}


.discount-btn {
  display: inline-block;
    padding: 0.75rem 2rem;
  background: var(--accent);
  color: #222;
  font-weight: 700;
  border-radius: 2rem;
  text-decoration: none;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
}

.button--white-bg {
    margin-top: 1.5rem;
    transition: background 0.2s, box-shadow 0.2s, transform 0.2s;


}


.discount-btn:hover {
  background: var(--premium);
  color: #fff;
  box-shadow: 0 4px 24px rgba(108,71,255,0.18);
  transform: translateY(-4px) scale(1.03);
}

@media (max-width: 600px) {
  .pricing-discounts {
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
  }
  .discount-card {
    width: 100%;
    min-width: unset;
  }
}

/* Mobile responsiveness */
  @media (max-width: 768px) {
    .pricing-hero {
      padding: 60px 0 40px;
    }

    .pricing-hero__title {
      font-size: 2.25rem;
    }

    .pricing-hero__subtitle {
      font-size: 1.1rem;
    }

    .pricing-section {
      padding: 40px 0;
    }
  }

  @media (max-width: 480px) {
    .pricing-hero__title {
      font-size: 2rem;
    }

    .pricing-hero__subtitle {
      font-size: 1rem;
    }
  }
</style>