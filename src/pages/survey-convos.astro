---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

import CTA from '../components/CTA.astro';

import Footer from '../components/Footer.astro';
import translations from '../content/translations/en.json';



---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header translations={translations.header} />
		<main>
		<h1>Subo turns surveys into <strong class="accent">friendly conversations</strong></h2>
  		<h2 class="subtitle">It's not a form, it's not a survey - it's a convo!</h2>
        <CTA translations={translations} />    
		</main>
		<Footer translations={translations.footer}/>
	</body>
</html>

<style>
main {
	padding: 150px 0 0 0;
	margin: 20px auto 0 auto;
}
h1 {

	text-align: center;
}
</style>